<% if ingredient.measurement.downcase.include?("kilogram")%>
  kg
<% elsif ingredient.measurement.downcase.start_with?("g")%>
  g
<% elsif ingredient.measurement.downcase.include?("milligram")%>
  mg
<% elsif ingredient.measurement.downcase.include?("liter")%>
  l
<% elsif ingredient.measurement.downcase.include?("milliliter") %>
  ml
<% elsif ingredient.measurement.downcase.include?("quart")%>
  <%= ingredient.measurement.downcase %>
<% elsif ingredient.measurement.downcase.include?("cup")%>
  <%= ingredient.measurement.downcase %>
<% elsif ingredient.measurement.downcase.include?("tablespoon")%>
  tbsp
<% elsif ingredient.measurement.downcase.include?("teaspoon")%>
  tsp
<% elsif ingredient.measurement.downcase.include?("ounce") %>
  oz
<% elsif ingredient.measurement.downcase.include?("pound") %>
  lbs
<% end %>
