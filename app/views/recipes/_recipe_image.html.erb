<% unless params[:id].nil? || Recipe.find(params[:id]).nil? %>
    <div>
        <% if @recipe.photo.attached? %>
          <%= cl_image_tag @recipe.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1576867757603-05b134ebc379?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
              class="recipe-image" alt="Table filled with food">
        <% end %>
    </div>
<% end %>
