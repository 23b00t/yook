<% if @matches %>
  <% amount = (@matches[recipe].nan? ? 0 : (@matches[recipe] * 100).to_i) %>
  <% if amount > 90 %>
    <p class="green-tag">🏠 <%= amount %>% in house</p>
  <% elsif amount > 50 %>
    <p class="green-tag">🏠 <%= amount %>% in house</p>
  <% else %>
    <p class="red-tag">🏠 <%= amount %>% in house</p>
  <% end %>




<% end %>

<p class="tag">⏳ <%= recipe.cooking_time %> min</p>

<% unless recipe.rating.nil? %>
  <p class="tag">⭐️ <%= recipe.rating %>/5</p>
<% end %>

<% unless recipe.difficulty.nil? || recipe.difficulty.empty? %>
  <p class="tag">⚡️ <%= recipe.difficulty %></p>
<% end %>

<% unless recipe.serving_size.nil? %>
  <p class="tag">🍜 Serves: <%= recipe.serving_size %></p>
<% end %>


<p class="tag">
  <% if recipe.cooked? %>
    ☑ Cooked!
  <% else %>
    ➡ Not cooked
  <% end %>
</p>

<% unless recipe.tags.nil? || recipe.tags.empty? %>
  <% recipe.tags.split.each do |tag| %>
    <p class="tag"><%= tag %></p>
  <% end %>

<% end %>
