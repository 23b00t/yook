<%= simple_form_for recipe do |f| %>
  <% if current_path = :new %>
    <%= text_field_tag :link, nil, placeholder: "the Link" %> <%= f.button :submit, 'add recipe with the link' %>
  <% end %>
  <%= f.input :title, label: "Title", error: 'A title is mandatory, please specify one' %>
  <%= f.input :cooking_time %>
  <%= f.input :rating %>
  <%= f.input :difficulty, collection: %i[easy medium hard] %>
  <%= f.input :serving_size %>
  <%= f.input :tags, collection: %i[
      #fun #superfood #recipes #food #foodie #foodporn #cooking #recipe #foodphotography #instafood #foodblogger
      #yummy #healthyfood #homemade #foodstagram #delicious #easyrecipes #foodlover #tasty #healthy #recipeoftheday #healthylifestyle
      #healthyrecipes #dinner #homecooking #vegan #instagood #chef #cook #foodies #breakfast #foodblog #baking #foodpics #foodiesofinstagram
      #indianfood #lunch #vegetarian #yum #dessert #love #healthyeating #chicken #nutrition #cookingathome #health #foodgasm #recipeshare
      #homemadefood #instagram #fitness #chocolate #eat #kitchen #veganrecipes #glutenfree #foodlovers #cake #weightloss #cheflife #yummyfood #veganfood
    ], input_html: { multiple: true } %>
  <%= f.input :photo, as: :file, label: "Upload a picture of your dish" %>
  <%= f.button :submit, 'Add ingredients' %>
<%end%>
