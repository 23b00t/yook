<%- if controller_name != 'sessions' %>
  <div class='button button-secondary'>
    <%= link_to "Back to log in", new_session_path(resource_name), class: "button button-secondary" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class='button button-secondary'>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "button button-secondary"%>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class='button button-secondary'>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button button-secondary" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class='button button-secondary'>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "button button-secondary"%>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="button button-secondary">
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "button button-secondary" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class='button button-secondary'>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
    <% end %>
  </div>
<% end %>
