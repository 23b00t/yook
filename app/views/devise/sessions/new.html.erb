


<div class="dark-box mt-5">
    <%= render "devise/shared/title" %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'input' } }, data: { turbo: :false }) do |f| %>
    <div class="">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button button-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
